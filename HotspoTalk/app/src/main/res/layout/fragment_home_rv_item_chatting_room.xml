<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.example.hotspotalk.data.entity.response.RoomInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_rv_item_chatting_room"
        android:paddingVertical="13dp"
        android:paddingStart="7dp"
        android:paddingEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintStart_toEndOf="@+id/cv_notify_rv_item_chatting_room"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_profile_img_rv_item_chatting_room"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/black"
                tools:srcCompat="@drawable/ic_baseline_account_circle_24" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_room_name_rv_item_chatting_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{data.roomName}"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/cardView"
            tools:text="title" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_notify_rv_item_chatting_room"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:visibility="invisible"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView" />

        <TextView
            android:id="@+id/tv_user_rv_item_chatting_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="00"
            app:layout_constraintBottom_toBottomOf="@+id/tv_room_name_rv_item_chatting_room"
            app:layout_constraintStart_toEndOf="@+id/tv_room_name_rv_item_chatting_room"
            app:layout_constraintTop_toTopOf="@+id/tv_room_name_rv_item_chatting_room" />

        <TextView
            android:id="@+id/tv_user_nickname_rv_item_chatting_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            tools:text="nickname"
            app:layout_constraintBottom_toBottomOf="@+id/tv_user_rv_item_chatting_room"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_secret_rv_tem_chatting_room"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/iv_secret_rv_tem_chatting_room"
            android:layout_width="20dp"
            android:layout_height="20dp"
            setInvisible="@{data.roomPW == null}"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_baseline_lock_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>